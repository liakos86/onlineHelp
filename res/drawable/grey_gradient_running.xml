<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="@color/circle_grey" />
            <stroke
                    android:width="0.5dp"
                    android:color="@color/circle_grey" />
            <corners
                    android:radius="0dp" />
            <padding
                    android:left="@dimen/eight"
                    android:top="@dimen/eight"
                    android:right="@dimen/eight"
                    android:bottom="@dimen/eight" />
        </shape>
    </item>


    <item>
        <shape>
            <solid android:color="@color/white_back"/>
            <stroke
                    android:width="0.5dp"
                    android:color="@color/circle_grey" />
            <corners
                    android:radius="0dp" />
            <padding
                    android:left="@dimen/eight"
                    android:top="@dimen/eight"
                    android:right="@dimen/eight"
                    android:bottom="@dimen/eight" />
        </shape>
    </item>
</selector>



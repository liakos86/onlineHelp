<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- the theme applied to the application or activity -->
    <style name="CustomIntervalTheme"
           parent="@android:style/Theme.Holo.Light">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/white_back</item>
        <item name="android:actionBarStyle">@style/CustomIntervalTheme.ActionBarStyle</item>
    </style>

    <style name="CustomIntervalTheme.ActionBarStyle"
           parent="@android:style/Widget.Holo.Light.ActionBar" >
        <item name="android:background">@color/primary_grey</item>
        <item name="android:titleTextStyle">@style/CustomIntervalTheme.ActionBarStyle.TitleTextStyle</item>
        <item name="android:icon">@null</item>

    </style>

    <style name="CustomIntervalTheme.ActionBarStyle.TitleTextStyle"
           parent="@android:style/Widget.Holo.Light.ActionBar" >
       <item name="android:textColor">@color/interval_blue</item>

    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/plus_minus_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/twenty</item>
        <item name="android:paddingRight">@dimen/twenty</item>
    </style>

    <style name="BottomTab">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bottom_button_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BottomTab.Inactive">
        <item name="android:background">@color/secondary_grey</item>
    </style>

    <style name="BottomTabImage">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="BottomTabText">
        <item name="android:textColor">@color/white_back</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_back</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:layout_height">@dimen/standard_view_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
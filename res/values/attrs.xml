<?xml version="1.0" encoding="utf-8"?>
<resources>
<declare-styleable name="ProgressWheel">
    <attr name="text" format="string" />
    <attr name="textColor" format="color" />
    <attr name="textSize" format="dimension" />
    <attr name="barColor" format="color" />
    <attr name="rimColor" format="color" />
    <attr name="rimWidth" format="dimension" />
    <attr name="spinSpeed" format="integer" />
    <attr name="circleColor" format="color" />
    <attr name="radius" format="dimension" />
    <attr name="barWidth" format="dimension" />
    <attr name="barLength" format="dimension" />
    <attr name="delayMillis" format="dimension"/>
    <attr name="contourColor" format="color"/>
    <attr name="contourSize" format="float"/>
    <attr name="multiplier" format="float"/>
</declare-styleable>

    <declare-styleable name="CircularImageView">
        <attr name="border" format="boolean"/>
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="shadow" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="NumberPickerKostas">
        <attr name="minValue" format="integer"/>
        <attr name="maxValue" format="integer"/>
        <attr name="step" format="integer"/>
        <attr name="textName" format="string"/>
    </declare-styleable>

    <declare-styleable name="Theme">
        <attr name="circularImageViewStyle" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="kostasPickerTheme">
        <attr name="kostasPickerViewStyle" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="ShownEdittext">
        <attr name="android:inputType"/>
        <attr name="android:hint"/>
        <attr name="android:enabled"/>
    </declare-styleable>

</resources>
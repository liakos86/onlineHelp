<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/drawer_black"
              android:layout_height="match_parent">


    <ListView android:id="@+id/plansList"
              android:layout_alignParentTop="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              />

    <TextView android:id="@+id/noPlansText" android:textColor="@color/white_back" android:layout_centerInParent="true" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no_plans" android:textSize="20dp" android:drawableBottom="@drawable/empty_100"/>




</RelativeLayout>
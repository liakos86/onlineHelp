<?xml version="1.0" encoding="utf-8"?>


    <ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/viewFlipper"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/drawer_black"
            >

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <ExpandableListView
                android:id="@+id/listExpRunning"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:groupIndicator="@drawable/group_indicator"
                />



        <TextView android:id="@+id/noRunsText" android:textColor="@color/white_back" android:layout_centerInParent="true" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no_runs" android:textSize="20dp" android:drawableBottom="@drawable/empty_100"/>

        </RelativeLayout>

        <RelativeLayout  android:layout_width="fill_parent" android:layout_height="fill_parent">

        <ListView

                android:id="@+id/listIntervals"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/intervalsButtons"
                android:layout_alignParentTop="true"
                />


            <LinearLayout android:baselineAligned="false" android:id="@+id/intervalsButtons" android:layout_alignParentBottom="true" android:layout_width="fill_parent" android:layout_height="wrap_content"  android:padding="@dimen/eight">


                <Button android:textStyle="bold" android:layout_marginRight="@dimen/four" android:textColor="@color/white_back"  android:id="@+id/buttonCloseIntervals" android:background="@drawable/close_button_selector" android:text="Close"  android:layout_weight="1" android:layout_width="0dp" android:layout_height="@dimen/standard_view_height"/>
                <Button android:textStyle="bold"  android:id="@+id/buttonShowMap" android:textColor="@color/white_back" android:layout_weight="1" android:layout_width="0dp" android:layout_height="@dimen/standard_view_height" android:background="@drawable/plus_minus_selector" android:text="Map"/>



            </LinearLayout>


        </RelativeLayout>


        <FrameLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"


            >
    <fragment
            android:id="@+id/mapListKostas"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />

            <ImageButton
                    android:layout_margin="15dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/close"
                    android:background="@drawable/circle_red"
                    android:focusable="false"
                    android:id="@+id/buttonCloseMap"
                    android:layout_gravity="left|bottom" />

            <ProgressBar android:id="@+id/progressBarMap" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"/>


        </FrameLayout>
    </ViewFlipper>



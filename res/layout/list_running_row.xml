<?xml version="1.0" encoding="UTF-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:background="@drawable/grey_gradient_running"  android:padding="10dp" android:minHeight="48dp"
        >




    <LinearLayout android:layout_alignParentLeft="true" android:layout_marginLeft="@dimen/eight"  android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
        <TextView android:id="@+id/runningDescription" android:textColor="@android:color/black" android:textStyle="bold" android:layout_centerVertical="true" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView android:id="@+id/runningDate" android:textStyle="italic" android:textColor="@color/interval_green"  android:layout_width="wrap_content"
                  android:layout_below="@id/runningDescription" android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/intervalCount"
              android:textColor="@color/drawer_black"
              android:gravity="center_vertical"
              android:layout_centerVertical="true"
              android:layout_alignParentRight="true"
              android:textSize="@dimen/medium_text"
              android:textStyle="bold"
              android:layout_marginRight="@dimen/four"
            />

</RelativeLayout>
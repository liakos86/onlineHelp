<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:background="@color/primary_grey">


    <EditText
            android:textColorHint="@android:color/darker_gray"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/primary_grey"
            android:background="@drawable/edit_text_back"
            android:id="@+id/user_email"
            android:paddingLeft="@dimen/eight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_view_height"
            android:hint="your email here"/>

    <EditText
            android:textColorHint="@android:color/darker_gray"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/primary_grey"
            android:background="@drawable/edit_text_back"
            android:id="@+id/user_name"
            android:paddingLeft="@dimen/eight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_view_height"
            android:hint="your username here"/>


    <EditText
            android:textColorHint="@android:color/darker_gray"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/primary_grey"
            android:background="@drawable/edit_text_back"
            android:id="@+id/user_pass"
            android:paddingLeft="@dimen/eight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_view_height"
            android:hint="your password here"/>



    <TextView android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:id="@+id/textLogin" android:layout_gravity="center" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Existing User Login" android:textStyle="italic|bold" android:textColor="@color/white_back"/>
    <Button android:id="@+id/buttonRegister"  android:background="@drawable/bottom_button_background" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Register" android:textColor="@color/white_back"/>


    <TextView android:visibility="gone" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:id="@+id/textRegister" android:layout_gravity="center" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Register" android:textStyle="italic|bold" android:textColor="@color/white_back"/>
    <Button android:visibility="gone" android:id="@+id/buttonLogin"  android:background="@drawable/bottom_button_background" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Login" android:textColor="@color/white_back"/>
    <TextView android:visibility="gone" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:id="@+id/textForgot" android:layout_gravity="center" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Forgot password" android:textStyle="italic|bold" android:textColor="@color/white_back"/>





</LinearLayout>
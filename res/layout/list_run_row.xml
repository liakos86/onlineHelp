    <TextView android:layout_alignParentTop="true"   android:id="@+id/topRightText" android:textSize="@dimen/small_text" android:textColor="@color/white_back"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>



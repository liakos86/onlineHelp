    <!--<LinearLayout android:layout_toRightOf="@+id/rowIcon"  android:layout_marginLeft="@dimen/eight"  android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">-->

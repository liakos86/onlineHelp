                android:id="@+id/btn_my_runs"
                style="@style/BottomTab">
            <ImageView
                    android:src="@drawable/diary_50"
                    style="@style/BottomTabImage"/>
            <TextView
                    android:text="@string/diary"
                    style="@style/BottomTabText"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/btn_my_plans"
                style="@style/BottomTab">
            <ImageView
                    android:src="@drawable/plan_50"
                    style="@style/BottomTabImage"/>
            <TextView
                    android:text="@string/plans"
                    style="@style/BottomTabText"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/btn_new_interval"
                style="@style/BottomTab">
            <ImageView
                    android:src="@drawable/interval_50"
                    style="@style/BottomTabImage"/>
            <TextView
                    android:text="@string/run"
                    style="@style/BottomTabText"/>
        </LinearLayout>

